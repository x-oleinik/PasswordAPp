<?xml version="1.0" encoding="utf-8"?>
<clip
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clipOrientation="horizontal"
    >

    <level-list>

        <item android:minLevel="0" android:maxLevel="3999">
            <shape>
                <solid android:color="@color/red" />
            </shape>
        </item>

        <item android:minLevel="4000" android:maxLevel="7999">
            <shape>
                <solid android:color="@color/yellow" />
            </shape>
        </item>

        <item android:minLevel="8000" android:maxLevel="10000">
            <shape>
                <solid android:color="@color/green" />
            </shape>
        </item>

    </level-list>

</clip>